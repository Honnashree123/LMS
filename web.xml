<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">

    <servlet>
        <servlet-name>Available</servlet-name>
        <servlet-class>Available</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Available</servlet-name>
        <url-pattern>/Available</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReturnBook</servlet-name>
        <servlet-class>ReturnBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReturnBook</servlet-name>
        <url-pattern>/ReturnBook</url-pattern>
    </servlet-mapping>
</web-app>
